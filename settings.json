{
  "workbench.settings.editor": "json",
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.iconTheme": "Monokai Pro (Filter Spectrum) Icons",
  "editor.fontFamily": "JetBrains Mono",
  "terminal.integrated.fontFamily": "Geist Mono",
  "terminal.integrated.fontWeight": "600",
  "editor.fontWeight": "600",
  "editor.minimap.enabled": false,
  "projectManager.hg.baseFolders": ["/home/riz1/projects"],
  "projectManager.sortList": "Recent",

  // Font size
  "editor.fontSize": 14,
  "terminal.integrated.fontSize": 15,

  // ui
  "window.newWindowDimensions": "offset",
  "window.commandCenter": false,
  "editor.scrollbar.vertical": "auto",
  "window.titleBarStyle": "custom",
  "editor.scrollbar.horizontal": "auto",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.inlineSuggest.showToolbar": "onHover",

  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true
  },

  // Misc
  "workbench.startupEditor": "welcomePageInEmptyWorkbench",
  "explorer.compactFolders": false,
  "editor.tabSize": 2,
  "workbench.editor.showTabs": "single",
  "editor.linkedEditing": false,
  "breadcrumbs.filePath": "off",
  "breadcrumbs.enabled": false,
  "files.trimTrailingWhitespace": true,
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": false,

  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "workbench.activityBar.location": "bottom",
  "window.customTitleBarVisibility": "auto",

  "window.menuBarVisibility": "compact",
  "workbench.layoutControl.enabled": false,

  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.addMissingImports": "never"
  },
  "editor.lineNumbers": "relative",
  "editor.formatOnSave": true,
  "tailwindCSS.validate": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  // VIM
  "vim.handleKeys": {
    "<C-p>": false,
    "<C-s>": true
  },

  // append zz to ctrl-f and ctrl-b
  "vim.normalModeKeyBindings": [
    {
      "before": ["<C-f>", "<C-b>"],
      "commands": ["zz"]
    }
  ],
  "supermaven.enable": {
    "*": true
  },
  "vim.useSystemClipboard": true,
  "supermaven.allowGitignore": true,
  "window.zoomLevel": 1,
  "workbench.sideBar.location": "right",
  "projectManager.git.baseFolders": ["/home/riz1/projects"],
  "files.associations": {
    "*.css": "tailwindcss"
  },

  "vim.leader": " "
}
